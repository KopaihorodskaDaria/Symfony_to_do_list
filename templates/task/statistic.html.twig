{% extends 'base.html.twig' %}

{% block title %}Task Statistics{% endblock %}


{% block body %}

    <div class="stats-container">
        <h1>📊Statistics for all tasks</h1>

        <a href="{{ path('task_index') }}">← Back to tasks</a>
        <div class="chart-container">
        <canvas id="taskChart"
                data-todo="{{ data['todo'] }}"
                data-in-progress="{{ data['in_progress'] }}"
                data-done="{{ data['done'] }}">
        </canvas>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

{% endblock %}

